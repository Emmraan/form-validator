{
  "name": "form-validator",
  "version": "2.0.0",
  "description": "A customizable microservice for form validation.",
  "main": "dist/index.js",
  "scripts": {
    "tsc": "tsc -p tsconfig.build.json",
    "build": "pnpm run clean && pnpm run tsc",
    "start": "node dist/index.js",
    "dev": "nodemon --watch src --ext ts --exec ts-node src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "nodejs",
    "spam",
    "express",
    "node",
    "cheerio",
    "domain",
    "form"
  ],
  "author": "Emmraan",
  "license": "MIT",
  "packageManager": "pnpm@10.12.4",
  "dependencies": {
    "body-parser": "^2.2.0",
    "cheerio": "^1.1.0",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "ioredis": "^5.6.1",
    "node-fetch": "^2.7.0",
    "node-html-parser": "^7.0.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node-fetch": "^2.6.12",
    "@types/supertest": "^6.0.3",
    "dotenv": "^17.2.0",
    "jest": "^30.0.4",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.3",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
